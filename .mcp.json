{
  "mcpServers": {
    "log-query-server": {
      "command": "dotnet",
      "args": ["run", "--project", "MCP/LogQueryServer"],
      "env": {
        "LOG_PATH": "./Logs"
      }
    },
    "metrics-server": {
      "command": "dotnet", 
      "args": ["run", "--project", "MCP/MetricsServer"],
      "env": {
        "ENVIRONMENT": "production"
      }
    }
  }
}