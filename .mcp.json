{
  "mcpServers": {
    "log-query-server": {
      "command": "dotnet",
      "args": ["run", "--project", "MCP/LogQueryServer"],
      "env": {
        "LOG_PATH": "./Logs"
      },
      "stdin": true,
      "stderr": true
    },
    "metrics-server": {
      "command": "dotnet",
      "args": ["run", "--project", "MCP/MetricsServer"],
      "env": {
        "ENVIRONMENT": "production"
      },
      "stdin": true,
      "stderr": true
    }
  },
  "inputs": {
    "services": ["PaymentsService", "OrdersService"],
    "logPaths": ["./Logs/payments.log", "./Logs/orders.log"],
    "searchTerms": ["error", "exception", "warning", "critical"]
  }
}